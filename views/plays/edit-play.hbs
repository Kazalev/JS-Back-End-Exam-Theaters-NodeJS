<form class="theater-form" action="/plays/edit-play/{{ playToEdit._id }}" method="POST">
    <h1>Edit Theater</h1>
    <div>
        <label for="title">Theater Title:</label>
        <input type="text" name="title" placeholder="Theater name" value="{{playToEdit.title}}">
    </div>
    <div>
        <label for="description">Theater Description:</label>
        <textarea name="description" placeholder="Description">{{playToEdit.description}}</textarea>
    </div>
    <div>
        <label for="imageUrl">Image url:</label>
        <input type="text" name="imageUrl" placeholder="Image Url" value="{{playToEdit.imageUrl}}">
    </div>
    <div class="check">
        <input type="checkbox" name="isPublic" id="check-box">
        <label for="check-box">Public</label>
    </div>
    <button class="btn" type="submit">Submit</button>
</form>